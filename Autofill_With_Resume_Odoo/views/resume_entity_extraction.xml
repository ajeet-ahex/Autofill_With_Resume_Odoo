                        </div>
                    </div>
                    <div class="o_row">
                        <div class="o_col">
                            <label for="fetch_info">Select Information</label>
                        </div>
                    </div> -->
                

                </xpath>
                
                <!-- <xpath expr="//div[@class='oe_title pe-0']" position="before">
                                          
                        <div > 
                            <span style="display: block; margin-bottom: 10px; font-weight: bold;">
                               Get Digitalize Resume Info :
                            
                            <button name="action_refresh_page" type="object" string="Click Here" 
                                 id="resume_refresh_button" 
                                /></span>
                        </div>
                    
                </xpath> -->

                
                <!-- Adding Github profile field after LinkedIn -->
                <xpath expr="//field[@name='name']" position="replace">
                    <!-- <group>
                        Group for the name field
                        <field name="name" />
                    </group> -->
                    <div style="display: flex; width: 50%;">
                        
                        <div style="flex: 1;">
                            <field name="name"/>
                        </div>
                    <!-- <group>  -->
                        <!-- Group for the button -->
                        <!-- <div style="height: 50px;position: relative;right: -211px; width:50px">
                            <button name="action_add_extra_info" type="object" string="Fetch Extra Information"  
                                class="btn btn-primary" 
                                style="margin-top: 70px; width: 173px;"/>
                        </div> -->
                    <!-- </group> -->
                     </div>
                </xpath>
                
                <xpath expr="//field[@name='linkedin_profile']" position="after">
                    <field name="resume_github" widget="url" placeholder="Github" readonly="False" invisible="show_resume_github == False"/>
                    <field name="show_resume_github" invisible='True' />
                </xpath>
                

                <!-- Making type_id field invisible -->
                <xpath expr="//field[@name='type_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Replacing phone, name, and email fields with custom fields -->
                <xpath expr="//field[@name='partner_phone']" position="replace">
                    <!-- <field name="resume_phone" placeholder="Phone" widget="phone" readonly="False" /> -->
                    <field name="resume_phone" placeholder="Phone" widget="phone" readonly="False" invisible="show_resume_phone == False"/> 
                     <field name="show_resume_phone" invisible='True'/>
                </xpath>
                <xpath expr="//label[@for='partner_name']" position="replace">
                    <label for="resume_name" string="Applicant's Name :  "/>
                    
                </xpath>
                <xpath expr="//field[@name='partner_name']" position="replace">
                    <field name="resume_name" placeholder="Name" widget="Char" readonly="False"/>
                    <!-- <field name="resume_name" placeholder="resume name" widget="name" readonly="False" invisible="show_resume_name == False"/> 
                     <field name="show_resume_name" invisible='True'/> -->
                </xpath>
                <xpath expr="//field[@name='email_from']" position="replace">
                    <!-- <field name="resume_email" widget="email" readonly="False"/> -->
                    <field name="resume_email" placeholder="resume email" widget="email" readonly="False" invisible="show_resume_email == False"/> 
                     <field name="show_resume_email" invisible='True'/>
                </xpath>
                <xpath expr="//field[@name='linkedin_profile']" position="replace">
                    <field name="resume_linkedin" placeholder="LinkedIn Profile" widget="url" readonly="False" invisible="show_resume_linkedin == False"/>
                    <field name="show_resume_linkedin" invisible='True'/>
                    <!-- <field name="resume_phone" placeholder="Phone" widget="text" readonly="False" invisible="show_resume_phone == False"/>
                    <field name="show_resume_phone" invisible='True'/> -->
                    <field name="resume_degree" widget="text" placeholder="Degree" readonly="False" invisible="show_resume_degree == False"/>
                    <field name="show_resume_degree" invisible='True'/>
                    <field name="resume_exp" widget="text" placeholder="Experience" readonly="False" invisible="show_resume_exp == False"/>
                    <field name="show_resume_exp" invisible='True'/>
                    <field name="resume_loc" widget="text" placeholder="Location" readonly="False" invisible="show_resume_loc == False"/>
                    <field name="show_resume_loc" invisible='True'/>
                    <field name="resume_certificates" widget="text" placeholder="Certificats" readonly="False" invisible="show_resume_certificates == False"/>
                    <field name="show_resume_certificates" invisible='True'/>
                    <field name="resume_known_languages" widget="text" placeholder="Know Languages" readonly="False" invisible="show_resume_known_languages == False"/>
                    <field name="show_resume_known_languages" invisible='True'/>
                    <field name="resume_achievements" widget="text" placeholder="Achievements" readonly="False" invisible="show_resume_achievements == False"/>
                    <field name="show_resume_achievements" invisible='True'/>
                    <field name="resume_project_names" widget="text" placeholder="Project Names" readonly="False" invisible="show_resume_project_names == False"/>
                    <field name="show_resume_project_names" invisible='True'/>
                    <field name="resume_hobbies" widget="text" placeholder="Hobbies" readonly="False" invisible="show_resume_hobbies == False"/>
                    <field name="show_resume_hobbies" invisible='True'/>
                    <field name="resume_strength" widget="text" placeholder="Strength" readonly="False" invisible="show_resume_strength == False"/>
                    <field name="show_resume_strength" invisible='True'/>
                    <field name="resume_dob" widget="text" placeholder="Date Of Birth" readonly="False" invisible="show_resume_dob == False"/>
                    <field name="show_resume_dob" invisible='True'/>
                    <field name="resume_gender" widget="text" placeholder="Gender" readonly="False" invisible="show_resume_gender == False"/>
                    <field name="show_resume_gender" invisible='True'/>
                    <field name="resume_nationality" widget="text" placeholder="Nationalities" readonly="False" invisible="show_resume_nationality == False"/>
                    <field name="show_resume_nationality" invisible='True'/>
                    <field name="resume_soft_skill" widget="text" placeholder="Soft Skills" readonly="False" invisible="show_resume_soft_skill == False"/>
                    <field name="show_resume_soft_skill" invisible='True'/>
                    <field name="resume_marital_status" widget="text" placeholder="Matital Status" readonly="False" invisible="show_resume_marital_status == False"/>
                    <field name="show_resume_marital_status" invisible='True'/>
                    <field name="resume_Weakness" widget="text" placeholder="Weakness" readonly="False" invisible="show_resume_Weakness == False"/>
                    <field name="show_resume_Weakness" invisible='True'/>
                </xpath>
                
                
            </field>
        </record>
